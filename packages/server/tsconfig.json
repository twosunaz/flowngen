{
    "compilerOptions": {
        "lib": ["es2021"],
        "target": "es2021",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "typeRoots": ["./types", "./node_modules/@types"] // ✅ Add this if not already present
    },
    "include": ["src", "types"], // ✅ Add your custom types directory here
    "exclude": ["node_modules", "**/*.test.ts"]
}
